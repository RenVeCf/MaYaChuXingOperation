<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_pause_car_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="20sp"
        app:sUseShape="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/bg_gradient_stroke_bt"
        android:paddingStart="@dimen/x30"
        android:paddingTop="@dimen/y5"
        android:paddingEnd="@dimen/x30"
        android:paddingBottom="@dimen/y5"
        android:textColor="@color/tx_bottom_navigation_select" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/tx_bottom_navigation" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/bt_pause"
            style="@style/SuperButton.Gray"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y90"
            android:text="暂停使用" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y50"
        android:background="@color/tx_bottom_navigation" />
</LinearLayout>
