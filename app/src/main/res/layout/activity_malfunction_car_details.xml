<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MalfunctionCarDetailsActivity">

    <com.ipd.mayachuxingoperation.common.view.TopView
        android:id="@+id/tv_malfunction_car_details"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="故障车辆详情" />

    <com.ipd.mayachuxingoperation.common.view.BounceScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_malfunction_car_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/x20"
                android:paddingEnd="@dimen/x20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x30"
                    android:layout_marginTop="@dimen/y50"
                    android:text="故障详情"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_car_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="车辆编号"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextColor="@color/black"
                    app:sRightViewGravity="right_center" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_applicant"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="报修人"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextColor="@color/black"
                    app:sRightViewGravity="right_center" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_application_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="报修时间"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextColor="@color/black"
                    app:sRightViewGravity="right_center" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_malfunction_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="故障类型"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextBackground="@drawable/bg_gradient_stroke_bt"
                    app:sRightTextColor="@color/tx_bottom_navigation_select"
                    app:sRightViewGravity="right_center" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_details_tx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="其他描述"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextColor="@color/black"
                    app:sRightViewGravity="right_center" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/tv_car_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    app:sLeftTextColor="@color/tx_bottom_navigation"
                    app:sLeftTextString="车辆位置"
                    app:sLeftViewGravity="left_center"
                    app:sRightTextColor="@color/tx_num"
                    app:sRightTextString="@string/go_use_car"
                    app:sRightViewGravity="right_center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x30"
                    android:layout_marginTop="@dimen/y50"
                    android:text="故障图片"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/iv_malfunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y50"
                    app:riv_corner_radius="7dp"
                    app:riv_is_touch_select_mode_enabled="true"
                    app:riv_selected_mask_color="@color/xui_config_color_gray_8" />
            </LinearLayout>
        </LinearLayout>
    </com.ipd.mayachuxingoperation.common.view.BounceScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>